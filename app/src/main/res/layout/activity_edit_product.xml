<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewModels.EditProduct"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="10dp"
                        android:text="Ảnh sản phẩm"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:textStyle="bold">

                    </TextView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_edit_product"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:padding="10dp">

                    </androidx.recyclerview.widget.RecyclerView>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/btn_add_image_edit_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_purple_corner_button"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Thêm ảnh sản phẩm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp">
            </Button>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Thông tin sản phẩm"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:textStyle="bold">

                    </TextView>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_name_edit_product"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tên sản phẩm"
                        android:theme="@style/CustomOutlinedBox"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/blue"
                        android:layout_marginTop="10dp"
                        app:errorEnabled="true"

                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_name_edit_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_MGF_edit_product"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Năm sản xuất"
                        android:theme="@style/CustomOutlinedBox"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/blue"
                        app:errorEnabled="true"
                        android:layout_marginTop="10dp"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_MGF_edit_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            >

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_brand_edit_product"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Thương hiệu"
                        android:theme="@style/CustomOutlinedBox"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/blue"
                        app:errorEnabled="true"
                        android:layout_marginTop="10dp"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_brand_edit_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Thuộc tính"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:textStyle="bold">

                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_type_edit_product"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Loai san pham"
                        android:theme="@style/CustomOutlinedBox"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/blue"
                        app:errorEnabled="true"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_type_edit_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            >

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Mô tả sản phẩm"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:textStyle="bold">

                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_desc_edit_product"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Mô tả sản phẩm"
                        android:theme="@style/CustomOutlinedBox"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/blue"
                        app:errorEnabled="true"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_desc_edit_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Giá sản phẩm"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:textStyle="bold">
                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_retailPrice_edit_product"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Giá bán lẻ"
                        android:theme="@style/CustomOutlinedBox"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/blue"
                        app:errorEnabled="true"
                        app:suffixText="VNĐ"
                        app:suffixTextColor="@color/blue"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_retailPrice_edit_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            >

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_costPrice_edit_product"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Giá nhập"
                        android:theme="@style/CustomOutlinedBox"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/blue"
                        app:errorEnabled="true"
                        app:suffixText="VNĐ"
                        app:suffixTextColor="@color/blue"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_costPrice_edit_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            >

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>


                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Kho hàng"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:textStyle="bold">
                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_stock_edit_product"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Tồn kho"
                        android:theme="@style/CustomOutlinedBox"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/blue"
                        app:errorEnabled="true"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_stock_edit_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            >

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:text="Hoa hồng"
                        android:textColor="@color/textColor"
                        android:textSize="16sp"
                        android:textStyle="bold">
                    </TextView>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/layout_commission_edit_product"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="Hoa hồng"
                        android:theme="@style/CustomOutlinedBox"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/blue"
                        app:errorEnabled="true"
                        app:suffixText="%"
                        app:suffixTextColor="@color/blue"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edit_commission_edit_product"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal"
                            >

                        </com.google.android.material.textfield.TextInputEditText>
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>


    <Button
        android:id="@+id/btn_update_edit_product"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="50dp"
        android:text="Cập nhật"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:background="@drawable/bg_purple_corner_button"
        android:layout_gravity="center"
        >
    </Button>
</LinearLayout>