<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".ViewModels.AddSale">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_edit_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/image_sale"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:padding="2dp"
                        android:background="@drawable/ic_add"
                        app:shapeAppearanceOverlay="@style/circleImageView" />

                </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thông tin chương trình"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_margin="10dp"/>

                    <EditText
                        android:id="@+id/txtTenCT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_edit_text"
                        android:ellipsize="end"
                        android:hint="Tên chương trình"
                        android:inputType="text"
                        android:maxLines="2"
                        android:padding="20dp"
                        android:textColor="@android:color/black"
                        tools:ignore="VisualLintTextFieldSize" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <EditText
                        android:id="@+id/txtMoTa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_edit_text"
                        android:ellipsize="end"
                        android:hint="Mô tả"
                        android:inputType="text"
                        android:maxLines="5"
                        android:padding="20dp"
                        android:textColor="@android:color/black"
                        tools:ignore="VisualLintTextFieldSize" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thời gian diễn ra"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_margin="10dp"/>

                    <EditText
                        android:id="@+id/txtNgayBD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_edit_text"
                        android:ellipsize="end"
                        android:hint="Ngày bắt đầu"
                        android:inputType="text"
                        android:padding="20dp"
                        android:textColor="@android:color/black"
                        tools:ignore="VisualLintTextFieldSize" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <EditText
                        android:id="@+id/txtNgayKT"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_edit_text"
                        android:ellipsize="end"
                        android:hint="Ngày kết thúc"
                        android:inputType="text"
                        android:padding="20dp"
                        android:textColor="@android:color/black"
                        tools:ignore="VisualLintTextFieldSize" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chi tiết chương trình"
                        android:textSize="20dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_margin="10dp"/>

                    <EditText
                        android:id="@+id/txtDonToiThieu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_edit_text"
                        android:ellipsize="end"
                        android:hint="Đơn hàng tối thiểu"
                        android:inputType="text"
                        android:padding="20dp"
                        android:textColor="@android:color/black"
                        tools:ignore="VisualLintTextFieldSize" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <EditText
                        android:id="@+id/txtKhuyenMai"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_edit_text"
                        android:ellipsize="end"
                        android:hint="Giá trị khuyến mãi"
                        android:inputType="text"
                        android:padding="20dp"
                        android:textColor="@android:color/black"
                        tools:ignore="VisualLintTextFieldSize" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp" />

                    <EditText
                        android:id="@+id/txtGiamToiDa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_edit_text"
                        android:ellipsize="end"
                        android:hint="Khuyến mãi tối đa"
                        android:inputType="text"
                        android:padding="20dp"
                        android:textColor="@android:color/black"
                        tools:ignore="VisualLintTextFieldSize" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/butAddSale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_button"
        android:layout_marginBottom="4dp"
        android:text="THÊM MỚI"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:gravity="center"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck,VisualLintButtonSize" />

</LinearLayout>