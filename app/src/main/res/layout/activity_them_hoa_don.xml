<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewModels.ThemHoaDon">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_select_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chọn sản phẩm"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:icon="@drawable/baseline_add_circle_24"
                    app:iconGravity="end"
                    android:textAlignment="textStart"
                    android:textColor="@color/textColor"
                    app:iconTint="@color/blue"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    >

                </com.google.android.material.button.MaterialButton>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_product_picked"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    >

                </androidx.recyclerview.widget.RecyclerView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Thông tin nhận hàng"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            >
                        </TextView>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/dds"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Số điện thoại nhận hàng"
                            android:theme="@style/CustomOutlinedBox"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/blue"
                            android:layout_marginTop="10dp"
                            app:errorEnabled="true"
                            app:startIconDrawable="@drawable/baseline_phone_24"
                            app:startIconTint="@color/blaltic_sea"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/phone_nhanhang"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                android:inputType="number"
                                ></com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layout_nameProduct"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Địa chỉ nhận hàng"
                            android:theme="@style/CustomOutlinedBox"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/blue"
                            app:errorEnabled="true"
                            app:startIconDrawable="@drawable/baseline_table_rows_24"
                            app:startIconTint="@color/blaltic_sea"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/diachinhanhang"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                ></com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Chi tiết thanh toán"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            >
                        </TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="Tổng tiền hàng: "
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:alpha="0.8"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            </TextView>
                            <TextView
                                android:id="@+id/tv_tongtienhang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="0"
                                android:textColor="@color/textColor"
                                android:textSize="15sp"
                                >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="Phí vận chuyển: "
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:alpha="0.8"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            </TextView>
                            <TextView
                                android:id="@+id/phivanchuyen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="0"
                                android:textColor="@color/textColor"
                                android:textSize="15sp"
                                android:background="@drawable/bg_white_border_blue"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"

                                >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="Phí lắp đặt: "
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:alpha="0.8"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            </TextView>
                            <TextView
                                android:id="@+id/philapdat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="0"
                                android:textColor="@color/textColor"
                                android:textSize="15sp"
                                android:background="@drawable/bg_white_border_blue"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"

                                >
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="Chiết khấu: "
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:alpha="0.8"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            </TextView>
                            <TextView
                                android:id="@+id/chietkhau"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="0"
                                android:textColor="@color/textColor"
                                android:textSize="15sp"
                                android:background="@drawable/bg_white_border_blue"
                                android:paddingLeft="20dp"
                                android:paddingRight="20dp"

                                >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="Tổng thanh toán: "
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:alpha="0.8"
                                android:textStyle="bold"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            </TextView>

                            <TextView
                                android:id="@+id/tongthanhtoan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="0"
                                android:textColor="@color/orange"
                                android:textSize="16sp"
                                android:textStyle="bold"></TextView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Khách hàng"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            </TextView>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_themkhachhang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                app:icon="@drawable/ic_add"
                                app:iconGravity="textStart"
                                app:iconTint="@color/blue"
                                android:layout_marginRight="5dp"
                                >

                            </com.google.android.material.button.MaterialButton>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="Mã khách hàng: "
                                android:textColor="@color/textColor"
                                android:textSize="15sp"
                                android:alpha="0.8"
                                android:textStyle="bold"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            </TextView>
                            <TextView
                                android:id="@+id/makhachhang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text=""
                                android:textColor="@color/textColor"
                                android:textSize="15sp"
                                >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="Tên khách hàng: "
                                android:textColor="@color/textColor"
                                android:textSize="15sp"
                                android:alpha="0.8"
                                android:textStyle="bold"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            </TextView>
                            <TextView
                                android:id="@+id/tenkhachhang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text=""
                                android:textColor="@color/textColor"
                                android:textSize="15sp"
                                >
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text="Số điện thoại: "
                                android:textColor="@color/textColor"
                                android:textSize="15sp"
                                android:alpha="0.8"
                                android:textStyle="bold"
                                >
                            </TextView>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                            </TextView>
                            <TextView
                                android:id="@+id/sodienthoaikhachhang"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:text=""
                                android:textColor="@color/textColor"
                                android:textSize="15sp"
                                >
                            </TextView>
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ghi chú"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            >
                        </TextView>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/ghichu"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Thêm ghi chú"
                            android:theme="@style/CustomOutlinedBox"
                            app:endIconMode="clear_text"
                            app:endIconTint="@color/blue"
                            app:errorEnabled="true"
                            app:startIconDrawable="@drawable/baseline_edit_calendar_24"
                            app:startIconTint="@color/blaltic_sea"
                            android:layout_marginTop="10dp"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/ghichu_donhang"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="15sp"
                                ></com.google.android.material.textfield.TextInputEditText>
                        </com.google.android.material.textfield.TextInputLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Phương thức thanh toán"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            >
                        </TextView>

                        <RadioGroup
                            android:id="@+id/radio_group_payment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            >
                            <RadioButton
                                android:id="@+id/btn_tienmat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Tiền mặt"
                                >

                            </RadioButton>
                            <RadioButton
                                android:id="@+id/btn_chuyenkhoan"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Chuyển khoản"
                                >

                            </RadioButton>
                            <RadioButton
                                android:id="@+id/btn_quetthe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Quẹt thẻ"
                                >

                            </RadioButton>
                        </RadioGroup>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp">
            </com.google.android.material.divider.MaterialDivider>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tổng thanh toán"
                        android:textSize="14sp"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        >
                    </TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tongthanhtoan2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="20sp"
                            android:textColor="@color/orange"
                            android:textStyle="bold"
                            >
                        </TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VNĐ"
                            android:textSize="20sp"
                            android:textColor="@color/orange"
                            android:textStyle="bold"
                            android:layout_marginStart="3dp"
                            >
                        </TextView>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                </TextView>


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_thanhtoan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán"
                    android:textAllCaps="false"
                    android:background="@drawable/background_button"
                    android:textSize="16sp"
                    >

                </com.google.android.material.button.MaterialButton>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>