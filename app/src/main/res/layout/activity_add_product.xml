<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewModels.AddProductActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_addImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Thêm ảnh sản phẩm">

        </Button>

        <EditText
            android:id="@+id/edit_nameProduct"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Ten san pham">

        </EditText>

        <Button
            android:id="@+id/btn_productType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loai san pham"></Button>

        <EditText
            android:id="@+id/edit_brand"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Thuong hieu">

        </EditText>

        <EditText
            android:id="@+id/edit_MGF"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nam san xuat">

        </EditText>

        <EditText
            android:id="@+id/edit_desc"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Mo ta san pham">

        </EditText>

        <EditText
            android:id="@+id/edit_retailPrice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Gia ban le"
            android:inputType="number">

        </EditText>

        <EditText
            android:id="@+id/edit_costPrice"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Gia nhap"
            android:inputType="number">

        </EditText>

        <EditText
            android:id="@+id/edit_stock"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Ton kho"
            android:inputType="number">

        </EditText>

        <EditText
            android:id="@+id/edit_commission"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Hoa hong"
            android:inputType="number">

        </EditText>

    </LinearLayout>
    <Button
        android:id="@+id/btn_saveProduct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Luu"
        android:layout_alignParentBottom="true"
        >
    </Button>
</RelativeLayout>