<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewModels.UpdateStaff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btnBack_UpdateStaff"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_back"
                    android:background="@null"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Sửa thông tin người dùng"
                    android:textSize="16sp"
                    android:textColor="@color/textColor"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="1"
                    >

                </TextView>

                <ImageButton
                    android:id="@+id/btnSave_UpdateStaff"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/baseline_check_24"
                    android:background="@null"/>
            </LinearLayout>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </com.google.android.material.divider.MaterialDivider>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:minWidth="300dp"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avtStaff_UpdateStaff"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/img_avt_3"
                    android:layout_gravity="center_horizontal"
                    >
                </de.hdodenhof.circleimageview.CircleImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phân quyền :"
                        android:textColor="@color/textColor"
                        android:textSize="17sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tvRole_UpdateStaff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Admin"
                        android:textSize="17sp"
                        android:textColor="@color/orange"
                        android:textStyle="bold"
                        >
                    </TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mã nhân viên :"
                        android:textColor="@color/textColor"
                        android:textSize="17sp"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tvId_UpdateStaff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NV0001"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Họ tên :"
                        android:textSize="17sp"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        >

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tvName_UpdateStaff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nguyen Van A"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        >
                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại :"
                        android:textSize="17sp"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        >

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tvPhone_UpdateStaff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0835489396"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        >
                    </TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email :"
                        android:textSize="17sp"
                        android:textColor="@color/textColor"
                        android:textStyle="bold"
                        >

                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                    </TextView>
                    <TextView
                        android:id="@+id/tvEmail_UpdateStaff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kietphamkb@gmail.com"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutState_UpdateStaff"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true"
            android:hint="Trạng thái"
            app:startIconDrawable="@drawable/baseline_directions_run_24"
            app:startIconTint="@color/textColor"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            >
            <AutoCompleteTextView
                android:id="@+id/tvState_UpdateStaff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                >
            </AutoCompleteTextView>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/red"
            android:textAlignment="gravity"
            android:lineHeight="20dp"
            android:text="Lưu ý:\n
-	Các thông tin của nhân viên: tên, email, số điện thoại, ngày sinh, địa chỉ được cập nhật từ tài khoản nhân viên.\n
-	Nếu bạn muốn thay đổi các thông tin trên, vui lòng thông báo nhân viên của bạn chỉnh sửa trong Thông tin tài khoản cá nhân.
"
            >

        </TextView>
    </LinearLayout>
</RelativeLayout>