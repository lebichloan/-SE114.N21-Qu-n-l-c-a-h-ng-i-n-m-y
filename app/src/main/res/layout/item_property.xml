<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kich thuoc"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="14sp"
            >

        </TextView>

        <TextView
            android:id="@+id/tv_value_property"
            android:layout_width="wrap_content"
            android:maxWidth="350dp"
            android:layout_height="wrap_content"
            android:text="slflsnfldnflsdfsdfsfssdfsfsfsdfsdfsfsdfsdfsfsdnflsdknflsdnfslnfsdnfldjsnfj"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="1dp"
            android:maxLines="2"
            android:ellipsize="end"
            >
        </TextView>
    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_delete_property"
        android:layout_width="20dp"
        android:layout_height="20dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:icon="@drawable/baseline_clear_24"
        app:iconTint="@color/gray"
        app:iconGravity="textStart"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        >

    </com.google.android.material.button.MaterialButton>

</RelativeLayout>