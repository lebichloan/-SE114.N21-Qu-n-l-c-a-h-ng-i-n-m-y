<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:orientation="horizontal"
    >
    <ImageView
        android:id="@+id/img_product"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/img_avt_3"
        android:layout_marginRight="12dp">

    </ImageView>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_id_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SP0001"
            android:textColor="@color/textColor"
            android:textStyle="bold"
            android:textSize="14sp"
            >

        </TextView>

        <TextView
            android:id="@+id/tv_name_product"
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:text="slflsnfldnflsdfsdfsfssdfsfsfsdfsdfsfsdfsdfsfsdnflsdknflsdnfslnfsdnfldjsnfj"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginTop="1dp"
            android:maxLines="2"
            android:ellipsize="end"
            >
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">
            <TextView
                android:id="@+id/tv_retail_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="85000"
                android:textColor="@color/orange"
                android:textSize="14sp"
                >
            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VNĐ"
                android:textColor="@color/orange"
                android:textSize="14sp"
                android:layout_marginStart="2dp"
                >
            </TextView>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_stock_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600"
            android:textColor="@color/textColor"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            android:layout_gravity="end"
            >
        </TextView>
    </LinearLayout>
</LinearLayout>