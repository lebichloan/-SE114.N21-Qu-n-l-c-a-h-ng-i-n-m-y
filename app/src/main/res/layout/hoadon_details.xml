                                android:textColor="@color/red"/>

                        </LinearLayout>
                        <TextView
                            android:id="@+id/detail_phuongthuc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
