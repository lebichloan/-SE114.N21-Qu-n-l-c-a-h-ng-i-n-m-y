<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/item_hoadon">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_hd"
            android:layout_width="340dp"
            android:layout_height="50dp"></androidx.appcompat.widget.SearchView>

        <Button
            android:id="@+id/addHoadonbut"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="350dp"
            android:background="@drawable/plusicon" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleview_hoadon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"/>
</LinearLayout>