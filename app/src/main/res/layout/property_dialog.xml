<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner_16"
    android:layout_margin="16dp"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/tv_title_property_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="Thêm thuộc tính"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:textStyle="bold"
        android:background="@drawable/bg_purple_corner_radius_top_left_top_right"
        >
    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/edit_name_property_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:padding="12dp"
            android:maxLength="50"
            android:hint="Nhập tên thuộc tính"
            >

        </EditText>

        <EditText
            android:id="@+id/edit_value_property_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:padding="12dp"
            android:maxLength="100"
            android:layout_marginTop="20dp"
            android:hint="Nhập giá trị thuộc tính"
            >

        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_property_dialog_cancel"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_white_border_black"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@color/textColor"
                android:theme="@style/ButtonCancel"
                ></Button>

            <Button
                android:id="@+id/btn_property_dialog_ok"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:background="@drawable/bg_purple_corner_10"
                android:text="Thêm"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp"></Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>